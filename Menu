#include<iostream>
#include<conio.h>
using namespace std;

int n=0;

int suma (int a,int b)
{
	int suma=0;
	suma=a+b;
	
	return suma;
	
}
int mul(int a,int b)
{
	int mul=1;
	mul=a*b;
	
	
	
	return mul;
}

int main()
{
	
while(n==0)
{	
	int a,b,k,p,opc;
	cout<<"****************MENU******************"<<endl;
	cout<<"1. suma:  "<<endl;
	cout<<"2. multiplicaion: "<<endl;
	cout<<"3. salir"<<endl;
	cin>>opc;
	

	switch(opc)
	{
		case  1:
			{
				cout<<"ingrese el valor de a: "<<endl;
				cin>>a;
				cout<<"ingrese el valor de b: "<<endl;
				cin>>b;
				k=suma(a,b);
				cout<<"suma = "<<k<<endl;
				
				
			}
			break;
		case 2:
			{
				cout<<"ingrese el valor de a: "<<endl;
				cin>>a;
				cout<<"ingrese el valor de b: "<<endl;
				cin>>b;
				p=mul(a,b);
				cout<<"multiplicacion = "<<p<<endl;
			}
		    break;
		    
		case 3:
		{
			cout<<"Fin de la calculadora";
			n=1;
		 } 
		break;   
		
		
	}
}
	
	
	
	
	
	return 0;
}
